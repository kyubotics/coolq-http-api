{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "'${workspaceFolder}/scripts/prepare.ps1'"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "generate debug",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "'${workspaceFolder}/scripts/generate.ps1'",
                "Debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "generate release",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "'${workspaceFolder}/scripts/generate.ps1'",
                "RelWithDebInfo"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "'${workspaceFolder}/scripts/build.ps1'",
                "Debug"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "dependsOn": [
                "generate debug"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "'${workspaceFolder}/scripts/build.ps1'",
                "RelWithDebInfo"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "dependsOn": [
                "generate release"
            ]
        },
        {
            "label": "clean all",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "'${workspaceFolder}/scripts/clean.ps1'"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        }
    ]
}